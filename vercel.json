{
  "version": 2,
  "framework": "nextjs",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/proxy/(.*)",
      "dest": "${BACKEND_URL}/api/$1",
      "status": 307
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "${BACKEND_URL}",
    "NODE_ENV": "production"
  },
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  }
}
