# Production AI Music System Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///production_music.db

# Azure Services (Optional - for production features)
# Get these from your Azure portal
AZURE_STORAGE_CONNECTION_STRING=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# OpenAI Configuration (Alternative to Azure)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Application Configuration
FLASK_ENV=production
PORT=5001
SECRET_KEY=your-secret-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Features Configuration
ENABLE_AI_ENHANCEMENT=true
ENABLE_BLOB_STORAGE=false
ENABLE_ADVANCED_FEATURES=true

# Music Generation Limits
MAX_DURATION=300
DEFAULT_DURATION=30
MAX_INSTRUMENTS=10

# Cache Configuration
CACHE_AUDIO_FEATURES=true
CACHE_DURATION=3600
